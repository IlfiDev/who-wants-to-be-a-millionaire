<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.StartFragment"
    android:background="@color/bg">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/presenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:elevation="10dp"
        android:src="@drawable/presenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hello_text"
        android:background="@drawable/start_shape"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"

        android:fontFamily="@font/montserratalternates_semibold"
        android:text="@string/hello_start"
        android:textColor="@color/white"
        android:textSize="16dp"

        android:paddingLeft="24dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/presenter" />

    <TextView
        android:id="@+id/millioner_title"
        android:background="@drawable/name_shape"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"

        android:fontFamily="@font/montserratalternates_semibold"
        android:gravity="center"
        android:text="@string/game_name"
        android:textColor="@color/black"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/next_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello_text" />

    <Button
        android:id="@+id/next_button"
        style="@style/Widget.Material3.Button"
        android:backgroundTint="@color/primary"
        app:cornerRadius="12dp"

        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="64dp"

        android:fontFamily="@font/montserratalternates_semibold"
        android:text="@string/button_continue"
        android:textColor="@color/black"
        android:textSize="12dp"

        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>